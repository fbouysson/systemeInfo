{% extends asset('base.html.twig') %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}"/>
{% endblock %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div style="display: inline-block; width: 100%; height: 100%; padding: 10px; border: 1px solid grey; border-radius: 8px; background: white">
        {% for salon in salons %}
            <div style="display: inline-block; cursor: pointer; border: 1px solid lightgrey; vertical-align: middle; width: 100px; height: 100px;text-align: center" onclick="window.location = '{{ path('salon',{ id : salon.idSalon}) }}'">
                <span style="vertical-align: middle; font-size: 20px; margin-top: 30%; display: block">{{ salon.nameSalon }}</span>
            </div>
        {% endfor %}
    </div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">

    </script>
{% endblock %}