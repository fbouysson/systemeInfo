{% extends asset('base.html.twig') %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/menu.css') }}"/>
{% endblock %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div style="display: inline-block; width: 100%; height: 100%; padding: 10px; border: 1px solid grey; border-radius: 8px; background: white">
        {% for salon in salons %}
            <div class="card cardSalon" style="display: inline-block; cursor: pointer; padding: 10px;border: 1px solid lightgrey; vertical-align: middle; width: 100px; height: 100px;text-align: center" onclick="window.location = '{{ path('salon',{ id : salon.idSalon}) }}'">
                <span style="font-size: 20px; display: block">
                    {% if salon.iconSalon != "" %}
                    <i class="{{ salon.iconSalon }}" style="font-size: 40px"></i>
                    <br>
                    {% endif %}
                    {{ salon.nameSalon }}
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript">

    </script>
{% endblock %}